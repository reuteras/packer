{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'password' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'password' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup-debian.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'password' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "install",
        " auto",
        " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " debian-installer=en_US",
        " locale=en_US",
        " keymap=se",
        " netcfg/get_hostname=surf",
        " netcfg/get_domain=local",
        "<enter>"
      ],
	  "boot_wait": "10s",
      "disk_size": 81920,
      "guest_os_type": "debian8-64",
      "headless": false,
      "http_directory": "http",
      "iso_urls": [
        "debian-10.3.0-amd64-xfce-CD-1.iso",
        "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.3.0-amd64-xfce-CD-1.iso"
      ],
      "iso_checksum_type": "sha256",
	  "iso_checksum": "47671cf75c68b8f0a2169857a7e2fe371553de3c956b87688604cc920bceb52e",
      "output_directory": "Debian_10_xfce_64-bit.vmwarevm",
      "shutdown_command": "echo 'password' | sudo -S shutdown -P now",
      "ssh_password": "password",
      "ssh_port": 22,
      "ssh_username": "user",
      "ssh_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "{{.Flavor}}.iso",
      "vm_name": "Debian_10_xfce_64-bit",
      "vmx_data": {
        "annotation": "Packer version: {{ packer_version }}|0AVM creation time: {{ isotime \"2006-01-02 15:04:05\" }}",
        "cpuid.coresPerSocket": "1",
        "memsize": "2048",
        "numvcpus": "1",
        "vhv.enable": "TRUE",
        "vpmc.enable": "TRUE"
      }
    }
  ],
  "post-processors": [
    [
      {
        "inline": [
          "vmrun -T fusion snapshot Debian_10_64-bit.vmwarevm/Debian_10_64-bit.vmx Installed"
        ],
        "type": "shell-local"
      }
    ]
 ]

}
