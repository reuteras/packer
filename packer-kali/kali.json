{
  "provisioners": [
    {
      "type": "file",
      "source": "/Applications/VMware Fusion.app/Contents//Library/isoimages/linux.iso",
      "destination": "/root/linux.iso"
    },
    {
      "type": "shell",
      "execute_command": "echo 'password' | {{.Vars}} bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} bash '{{.Path}}'",
      "script": "scripts/kali-tools-kali.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'password' | {{.Vars}} bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "install",
        " auto=true",
        " priority=critical",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " grub-installer/bootdev=/dev/sda",
        " -- ",
        "<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 51200,
      "guest_os_type": "debian8-64",
      "headless": false,
      "http_directory": "http",
      "iso_urls": [
        "mini.iso",
        "http://repo.kali.org/kali/dists/kali-rolling/main/installer-amd64/current/images/netboot/mini.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "2166ded4aec3fa87f8d7873b98c32b9c45798550aa301e5d5b27e130e0923e25",
      "output_directory": "Kali_64-bit.vmwarevm",
      "shutdown_command": "echo 'password'|sudo -S shutdown -P now",
      "ssh_password": "password",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "{{.Flavor}}.iso",
      "vm_name": "Kali_64-bit",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "2048",
        "numvcpus": "2"
      }
    }
  ],
  "post-processors": [
    [
      { 
        "inline": [
          "vmrun -T fusion snapshot Kali_64-bit.vmwarevm/Kali_64-bit.vmx Installed"
        ],
        "type": "shell-local"
      }
    ]
 ]  
}
